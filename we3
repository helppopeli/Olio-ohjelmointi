#ifndef CHEF_H
#define CHEF_H
#include <string>
using namespace std;

class chef
{
public:
    chef();
    chef(string);
   ~chef();
    string getname();
    void setName(string);

   virtual int makeSalad(int);
   virtual int makeSoup(int);
protected:
    string chefName;
};

#endif // CHEF_H

#ifndef ITALIANCHEF_H
#define ITALIANCHEF_H
#include <string>
#include"chef.h"
using namespace std;

class italianChef : public chef
{
public:
    italianChef();
    italianChef(string);
    ~italianChef();
    bool askSecret(string, int, int);
    virtual int makeSalad(int) override;
    virtual int makeSoup(int) override;
private:
    int water;
    int flour;
    string password = "pizza";
    int makePizza();
};

#endif // ITALIANCHEF_H

#include "chef.h"
#include <iostream>

chef::chef()

{
    cout << "Olen default kontruktorissa" <<endl;
}

chef::chef(string cN)
{
    cout << "Olen input konstruktorissa" << endl;
    chefName = cN;

}
chef::~chef()
{
    cout << "Olen default konstruktorissa" << endl;
}

int chef::makeSalad(int numberOftimes)
{
    cout << "Olen salaattifunktiossa!" << endl;
    //int numberOfportions = numberOftimes/5;
    cout << "Annoit: " << numberOftimes << " ainesta" << endl;
    cout << "sillä saadaan << numberOftimes/5 <<" " salaattiannosta" << endl;
    return numberOftimes;
}
int chef::makeSoup(int numberOftimes)
{
    cout << "Olen soppafunktiossa!" << endl;
    cout << "Annoit: " << numberOftimes << " ainesta" << endl;
    cout << "sillä saadaan << numberOftimes/5 <<" " salaattiannosta" << endl;

    return numberOftimes/3;
}

string chef::getname()

{
    cout << "olen getterissä!" << endl;
    cout << "kokin nimi on" << chefName << endl;
    return chefName;

}

void chef::setName(string cN)
{
    cout << "olen setterissä!" << endl;
    chefName = cN;
}


#include "italianchef.h"
#include <iostream>
italianChef::italianChef()


{
    cout << "Olen Italiandefaultkonstruktorissa" << endl;
}

